<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="app.js" type="text/javascript"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Bootstrap CSS 
    <link rel="stylesheet" href="css/bootstrap.min.css">-->

    <style>
        body {
            padding-top: 50px;
        }
    </style>
    <title>Registration Form</title>
</head>

<body>
    <header class="container">
        <%- include('./partials/adminheader.ejs'); %>
    </header>
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center window-height">
            <div class="col-md-3">
                <form action="register" method="POST">
                    <div class="card shadow">

                        <div class="card-body">
                            <div class="text-center">
                                <img src="tracker.png" alt="Tracker" height="150" width="250">
                            </div>

                            <div class="mt-4">
                                <div class="form-group">
                                    <label for="exampleInputFirstNameJane" class="form-label">First Name </label>
                                    <input type="text" name="firstName" placeholder="First Name" required>
                                    <div id="firstNameHelp" class="form-text"></div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputLastNameDoe" class="form-label">Last Name </label>
                                    <input type="text" name="lastName" placeholder="Last Name" required>
                                    <div id="lastNameHelp" class="form-text"></div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAge" class="form-label">Student Age </label>
                                    <input type="text" name="age" placeholder="Students Age" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPhoneNumber1" class="form-label">Address </label>
                                    <input type="text" name="address" placeholder="Address" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPhoneNumber1" class="form-label">Phone Number </label>
                                    <input type="phone_number" name="phoneNumber" placeholder="Phone Number" required>
                                </div>




                                <div>
                                    <%= name %>
                                </div>
                                <div>

                                    <img src="qr-code.png" alt="QR-Code Goes Here">
                                </div>
                            </div>



                        </div>
                        <div class="card-footer text-muted text-end">
                            <button onclick=pop() type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <footer>
        <%- include('./partials/footer.ejs'); %>
    </footer>
</body>

</html>